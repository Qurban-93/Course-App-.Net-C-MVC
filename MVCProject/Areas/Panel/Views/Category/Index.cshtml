@model List<Category>

<h1>USer Roles List</h1>
<a asp-action="create"
   class="btn btn-primary"><h6 style="color:white">Add new Category</h6></a>
@if (Model.Count == 0 || Model == null)
{
    <h2> Categories Not Founded Please Add Categories ! </h2>
}
else
{
    <div class="col-sm-12 col-xl-12">
        <div class="bg-light rounded h-100 p-4">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Settings</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.CategoryName</td>
                            <td>
                                @*Edit button*@
                                <a asp-action="edit"asp-route-id="@item.Id" class="btn btn-warning rounded-pill m-2">
                                    <i class="fa-solid fa-pen"></i>
                                </a>
 
                               @*Delete button*@
                                <a asp-action="delete" asp-route-id="@item.Id" class="btn btn-danger rounded-pill m-2">
                                    <i class="fa-solid fa-trash-can"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}

