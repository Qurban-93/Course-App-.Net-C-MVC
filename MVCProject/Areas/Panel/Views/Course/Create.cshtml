@model CourseCreateVM

<div class="bg-light rounded h-100 p-4">
    <h6 class="mb-4">Course Create Form</h6>
    <form method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <label asp-for="CourseName" class="form-label"></label>
            <input asp-for="CourseName" class="form-control">
            <span class="text-danger" asp-validation-for="CourseName"></span>
        </div>
         <div class="mb-3">
            <label asp-for="CategoryId" class="form-label"></label>
            <select asp-for="CategoryId" asp-items="@ViewBag.Categories" class="form-control"></select>
            <span class="text-danger" asp-validation-for="CategoryId"></span>
        </div>
        <div class="mb-3">
            <label asp-for="StartDate" class="form-label"></label>
            <input asp-for="StartDate" class="form-control">
            <span class="text-danger" asp-validation-for="StartDate"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Duration" class="form-label"></label>
            <input asp-for="Duration" class="form-control">
            <span class="text-danger" asp-validation-for="Duration"></span>
        </div>
        <div class="mb-3">
            <label asp-for="ClassDuration" class="form-label"></label>
            <input asp-for="ClassDuration" class="form-control">
            <span class="text-danger" asp-validation-for="ClassDuration"></span>
        </div>
        <div class="mb-3">
            <label asp-for="SkillLevel" class="form-label"></label>
            <input asp-for="SkillLevel" class="form-control">
            <span class="text-danger" asp-validation-for="SkillLevel"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Language" class="form-label"></label>
            <input asp-for="Language" class="form-control">
            <span class="text-danger" asp-validation-for="Language"></span>
        </div>
        <div class="mb-3">
            <label asp-for="StudentsCount" class="form-label"></label>
            <input asp-for="StudentsCount" class="form-control">
            <span class="text-danger" asp-validation-for="StudentsCount"></span>
        </div>
        <div class="mb-3">
            <label asp-for="CoursePrice" class="form-label"></label>
            <input asp-for="CoursePrice" type="number" class="form-control">
            <span class="text-danger" asp-validation-for="CoursePrice"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span class="text-danger" asp-validation-for="Description"></span>
        </div>
        <div class="mb-3">
            <label asp-for="AboutCourse" class="form-label"></label>
            <textarea asp-for="AboutCourse" class="form-control"></textarea>
            <span class="text-danger" asp-validation-for="AboutCourse"></span>
        </div>
        <div class="mb-3">
            <label asp-for="HowToApply" class="form-label"></label>
            <textarea asp-for="HowToApply" class="form-control"></textarea>
            <span class="text-danger" asp-validation-for="HowToApply"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Certification" class="form-label"></label>
            <textarea asp-for="Certification" class="form-control"></textarea>
            <span class="text-danger" asp-validation-for="Certification"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Photo" class="form-label"></label>
            <input asp-for="Photo" class="form-control">
            <span class="text-danger" asp-validation-for="Photo"></span>
        </div>
        <button type="submit" class="btn btn-primary">Add Course</button>
        <a asp-action="index" class="btn btn-primary">Cancel</a>
    </form>
</div>
