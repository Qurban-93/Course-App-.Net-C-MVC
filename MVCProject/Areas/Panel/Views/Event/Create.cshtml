@model EventCreateVM

<div class="bg-light rounded h-100 p-4">
    <h6 class="mb-4">Event Create Form</h6>
    <form method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <label asp-for="EventName" class="form-label"></label>
            <input asp-for="EventName" class="form-control">
            <span class="text-danger" asp-validation-for="EventName"></span>
        </div>
        <div class="mb-3">
            <label asp-for="StartTime" class="form-label"></label>
            <input asp-for="StartTime" class="form-control">
            <span class="text-danger" asp-validation-for="StartTime"></span>
        </div>
        <div class="mb-3">
            <label asp-for="EndTime" class="form-label"></label>
            <input asp-for="EndTime" class="form-control">
            <span class="text-danger" asp-validation-for="EndTime"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Adress" class="form-label"></label>
            <input asp-for="Adress" class="form-control">
            <span class="text-danger" asp-validation-for="Adress"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Description" class="form-label"></label>
            <input asp-for="Description" class="form-control">
            <span class="text-danger" asp-validation-for="Description"></span>
        </div>
        <div class="mb-3">
            <label class="form-label">Choose Speakers</label>
            <select asp-for="EventSpeakersId" asp-items=ViewBag.Speakers class="form-control"></select>
            <span class="text-danger" asp-validation-for="EventSpeakersId"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Photo" class="form-label"></label>
            <input asp-for="Photo" class="form-control">
            <span class="text-danger" asp-validation-for="Photo"></span>
        </div>     
        <button type="submit" class="btn btn-primary">Add Event</button>
        <a asp-action="index" class="btn btn-primary">Cancel</a>
    </form>
</div>