@model SliderCreateVM

<div class="bg-light rounded h-100 p-4">
    <h6 class="mb-4">Slider Create Form</h6>
    <form method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <label class="form-label">Slider Title</label>
            <input asp-for="Title" class="form-control">
            <span class="text-danger" asp-validation-for="Title"></span>
        </div>
        <div class="mb-3">
            <label class="form-label">Slider Description</label>
            <input asp-for="Description" class="form-control">
            <span class="text-danger" asp-validation-for="Description"></span>
        </div>
        <div class="mb-3">
            <label class="form-label">Slider ButtonUrl</label>
            <input asp-for="ButtonUrl" class="form-control">
            <span class="text-danger" asp-validation-for="ButtonUrl"></span>
        </div>
        <div class="mb-3">
            <label class="form-label">Slider Image</label>
            <input asp-for="Photo" class="form-control">
            <span class="text-danger" asp-validation-for="Photo"></span>
        </div>
        <button type="submit" class="btn btn-primary">Add Slider</button>
        <a asp-action="index" class="btn btn-primary">Cancel</a>
    </form>
</div>