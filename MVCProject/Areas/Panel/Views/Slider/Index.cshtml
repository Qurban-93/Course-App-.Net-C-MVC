@model List<Slider>



<div class="col-sm-12 col-xl-12">
    <div class="bg-light rounded h-100 p-4">
        <h1>Slider List</h1>
        <a asp-action="Create" asp-area="Admin"
           class="btn btn-primary"><h6 style="color:white">Add Slider</h6></a>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">Images</th>
                    <th scope="col">Title</th>
                    <th scope="col">Description</th>
                    <th scope="col">Button Url</th>
                    <th scope="col">Settings</th>

                </tr>
            </thead>
            <tbody>
                @foreach (Slider item in Model)
                {
                    <tr>

                        <td><img src="~/img/slider/@item.ImageUrl" width="150" height="150" /></td>
                        <td> @item.Title</td>
                        <td> @item.Description</td>
                        <td> @item.ButtonUrl </td>
                        <td>
                            @*Edit button*@
                            <a asp-action="edit"
                           asp-area="admin" asp-route-id="@item.Id" class="btn btn-warning rounded-pill m-2">
                                <i class="fa-solid fa-pen"></i>
                            </a>

                            @*Details button*@
                            <a asp-action="details" asp-area="Panel"
                           asp-route-id="@item.Id" class="btn btn-info rounded-pill m-2">
                                <i class="fa-solid fa-circle-info"></i>
                            </a>

                            @*Delete button*@
                            <a asp-action="delete" asp-area="Panel"
                           asp-route-id="@item.Id" class="btn btn-danger rounded-pill m-2"><i class="fa-solid fa-trash-can"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

