@model LoginVM

<main>
    <!-- breadcrumb area start -->
    <div class="breadcrumb-area bg-img" data-bg="~/assets/img/banner/breadcrumb-banner.jpg">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="breadcrumb-wrap text-center">
                        <nav aria-label="breadcrumb">
                            <h1 class="breadcrumb-title">Login-Register</h1>
                            <ul class="breadcrumb">
                                <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Login-Register</li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- breadcrumb area end -->
    <!-- login register wrapper start -->
    <div class="login-register-wrapper section-padding">
        <div class="container">
            <div class="member-area-from-wrap">
                <div class="row">
                    <!-- Login Content Start -->
                    <div class="col-lg-12">
                        <div class="login-reg-form-wrap">
                            <h2>Sign In</h2>
                            @if (TempData["SuccesChange"] != null)
                            {
                                <div class="alert alert-success" role="alert" style="text-align:center">                               
                                    <p>You password succesful changed !</p>
                                </div>
                            }
                            <form method="post">
                                <div class="single-input-item">
                                    <input asp-for="UserNameOrEmail" placeholder="Email or Username" required />
                                    <span class="text-danger" asp-validation-for="UserNameOrEmail"></span>
                                </div>
                                <div class="single-input-item">
                                    <input asp-for="Password" placeholder="Enter your Password" required />
                                    <span class="text-danger" asp-validation-for="Password"></span>
                                </div>
                                <div class="single-input-item">
                                    <div class="login-reg-form-meta d-flex align-items-center justify-content-between">
                                        <div class="remember-meta">
                                            <div class="custom-control custom-checkbox">
                                                <input asp-for="RememberMe" type="checkbox" class="custom-control-input">
                                                <label class="custom-control-label">Remember Me</label>
                                            </div>
                                        </div>
                                        <a asp-action="ForgotPassword" class="forget-pwd">Forget Password?</a>
                                    </div>
                                </div>
                                <div class="single-input-item">
                                    <button type="submit" class="btn">Login</button>
                                </div>
                            </form>
                        </div>
                    </div>
                    <!-- Login Content End -->
                </div>
            </div>
        </div>
    </div>
    <!-- login register wrapper end -->
</main>