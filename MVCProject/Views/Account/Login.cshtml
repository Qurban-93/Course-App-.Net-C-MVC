@model LoginVM


<!-- Banner Area Start -->
<div class="banner-area-wrapper">
    <div class="banner-area text-center">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>login</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Area End -->
<!-- Login start -->
<div class="login-area pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3 text-center">
                <div class="login">
                    <div class="login-form-container">
                        <div class="login-text">
                            <h2>login</h2>
                            @if (TempData["Message"] != null)
                            {
                                <div class="alert alert-warning" role="alert" style="text-align:center">
                                    <p>@TempData["Message"]</p>
                                </div>
                            }
                            @if (TempData["SuccesChange"] != null)
                            {
                                <div class="alert alert-success" role="alert" style="text-align:center">
                                    <p>You password succesful changed !</p>
                                </div>
                            }
                            <span>Please login using account detail bellow.</span>
                        </div>
                        <div class="login-form">
                            <form method="post">
                                <input asp-for="UserNameOrEmail" placeholder="Username">
                                <span class="text-danger" asp-validation-for="UserNameOrEmail"></span>
                                <input asp-for="Password" placeholder="Password">
                                <span class="text-danger" asp-validation-for="Password"></span>
                                <div class="button-box">
                                    <div class="login-toggle-btn">
                                        <input asp-for="RememberMe">
                                        <label for="remember">Remember me</label>
                                        <a asp-action="ForgotPassword">Forgot Password?</a>
                                    </div>
                                    <button type="submit" class="default-btn">Login</button>                     
                                </div>
                            </form>
                        </div>
                          <form asp-controller="Account" asp-action="ExternalLogin" method="post" asp-route-provider="Facebook">
                        <div class="button-box">
                        <button type="submit" class="default-btn" style="margin-top:20px;">Login with Facebook</button>
                        </div>
                        </form>
                        <div class="button-box"><a class="default-btn" style="margin-top:20px;" asp-action="googlelogin" asp-controller="account">Login with Google</a></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Login end -->
@await Component.InvokeAsync("Subscribe")
