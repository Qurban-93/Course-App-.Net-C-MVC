@model RegisterVM

<!-- Banner Area Start -->
<div class="banner-area-wrapper">
    <div class="banner-area text-center">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>sign up</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Area End -->
<!-- Register start -->
<div class="register-area pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3 text-center">
                <div class="login">
                    <div class="login-form-container">
                        <div class="login-text">
                            <h2>sign up</h2>
                            <span>Please login using account detail bellow.</span>
                            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                        </div>
                        <div class="login-form">
                            <form method="post">
                                <input asp-for="FullName" placeholder="Full name" required>
                                <span class="text-danger" asp-validation-for="FullName"></span>
                                <input asp-for="UserName" placeholder="User name">
                                <span class="text-danger" asp-validation-for="UserName" required></span>
                                <input asp-for="Email" placeholder="Email">
                                <span class="text-danger" asp-validation-for="Email" required></span>
                                <input asp-for="Password" placeholder="Password"required>
                                <span class="text-danger" asp-validation-for="Password"></span>
                                <input asp-for="RepeatPassword" placeholder="Repeat Password" required>
                                <span class="text-danger" asp-validation-for="RepeatPassword"></span>
                                <div class="button-box">
                                    <div class="login-toggle-btn">
                                        <input asp-for="RememmberMe">
                                        <label for="remember">Remember me</label>
                                        <a asp-action="ForgotPassword">Forgot Password?</a>
                                    </div>
                                    <button type="submit" class="default-btn">Registration Now</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Register end -->
@await Component.InvokeAsync("Subscribe")
