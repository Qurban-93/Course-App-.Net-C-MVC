@model Blog

<!-- Banner Area Start -->
<div class="banner-area-wrapper">
    <div class="banner-area text-center">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>blog details</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Area End -->
<!-- Blog Start -->
<div class="blog-details-area pt-150 pb-140">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <div class="blog-details">
                    <div class="blog-details-img">
                        <img width="100%" height="100%" src="~/img/blog/@Model.ImageUrl" alt="blog-details">
                    </div>
                    <div class="blog-details-content">
                        <h2>@Model.Title </h2>
                        <h6>By @Model.Author /  @Model.PublishDate.ToString("MMMM dd,yyyy")  /  <i class="fa fa-comments-o"></i> @Model.Comments.Count</h6>
                        <p>@Model.Description</p>
                    </div>
                    <div class="reply-area">
                        <h3>LEAVE A REPLY</h3>
                        <p>I must explain to you how all this a mistaken idea of ncing great explorer of the rut<br> the is lder of human happinescias unde omnis iste natus error sit volptatem </p>
                        <div class="comments">
                            <h5>@Model.Comments.Count Comment</h5>
                            <ul class="mt-30">
                                @foreach (var item in Model.Comments)
                                {
                                    <li class="row">
                                        <div class="col-lg-1 col-md-1">
                                            <img src="~/img/blog/comment-icon.png" alt="">
                                        </div>
                                        <div class="col-lg-8 col-md-8">
                                            <h5 class="comment-author">@item.User.FullName</h5>
                                            <p>@item.Date.ToString("dd MMMM , yyyy ,hh:mm")  </p>
                                            <p class="mb-0"> @item.Content  </p>
                                        </div>
                                        <div class="col-lg-2 col-md-2">
                                            @if (User.Identity.Name == item.User.UserName)
                                            {
                                                <a asp-controller="Comment" asp-action="Delete"
                                                    asp-route-id="@item.Id" class="btn btn-danger">
                                                    Delete
                                                </a>
                                            }
                                        </div>
                                    </li>
                                }
                            </ul>
                        </div>

                        <form class="mb-30" asp-action="add" asp-controller="Comment" asp-route-id="@Model.Id" method="post">
                            <div class="row">
                                <div class="col-md-9">
                                    <input name="message" placeholder="Comment">
                                </div>
                            </div>
                            <button type="submit" class="default-btn mb-30">Publish</button>
                            @if (TempData["EmptyComment"] != null)
                            {
                                <span class="text-danger mb-20">@TempData["EmptyComment"]</span>
                            }
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="blog-sidebar right">
                    <div class="single-blog-widget mb-47">
                        <h3>search</h3>
                        <div class="blog-search">
                            <form id="search" action="#">
                                <input type="search" placeholder="Search..." name="search" />
                                <button type="submit">
                                    <span><i class="fa fa-search"></i></span>
                                </button>
                            </form>
                        </div>
                    </div>
                    <div class="single-blog-widget mb-47">
                        <h3>categories</h3>
                        <ul>
                            <li><a href="#">CSS Engineering (10)</a></li>
                            <li><a href="#">Political Science (12)</a></li>
                            <li><a href="#">Micro Biology (08)</a></li>
                            <li><a href="#">HTML5 &amp; CSS3 (15)</a></li>
                            <li><a href="#">Web Design (20)</a></li>
                            <li><a href="#">PHP (23)</a></li>
                        </ul>
                    </div>
                    <div class="single-blog-widget mb-47">
                        <div class="single-blog-banner">
                            <a href="blog-details.html" id="blog"><img src="~/img/blog/blog-img.jpg" alt="blog"></a>
                            <h2>best<br> eductaion<br> theme</h2>
                        </div>
                    </div>
                    <div class="single-blog-widget mb-47">
                        <h3>latest post</h3>
                        @Html.Partial("_LatestPostPartialView",(List<Blog>)ViewBag.Blogs)
                    </div>
                    <div class="single-blog-widget">
                        <h3>tags</h3>
                        <div class="single-tag">
                            <a href="blog-details.html" class="mr-10 mb-10">course</a>
                            <a href="blog-details.html" class="mr-10 mb-10">education</a>
                            <a href="blog-details.html" class="mb-10">teachers</a>
                            <a href="blog-details.html" class="mr-10">learning</a>
                            <a href="blog-details.html" class="mr-10">university</a>
                            <a href="blog-details.html">events</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Blog End -->
<!-- Subscribe Start -->
@await Component.InvokeAsync("Subscribe")
<!-- Subscribe End -->
